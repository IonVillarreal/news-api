{
  "compilerOptions": {
    "target": "ES2020",                     // Define la versión de ES a usar
    "module": "commonjs",                    // Usa el sistema de módulos commonjs
    "rootDir": "./src",                      // Carpeta raíz de tus archivos TypeScript
    "outDir": "./dist",                      // Carpeta donde se colocarán los archivos compilados
    "esModuleInterop": true,                 // Interoperabilidad con módulos ES
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],                   // Incluye todos los archivos en src
  "exclude": ["node_modules"]                // Excluye la carpeta node_modules
}
